<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/upback"
    android:layout_weight="1"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOGO GAME"
        android:textSize="@dimen/_30sdp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginLeft="@dimen/_15sdp"
        ></TextView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quiz your brands knowledge"
        android:textSize="@dimen/_15sdp"
        android:textColor="@color/black"
        android:layout_marginLeft="@dimen/_15sdp"
        ></TextView>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_weight="1">
        >
        <Button
            android:layout_width="@dimen/_140sdp"
            android:layout_height="@dimen/_140sdp"
            app:backgroundTint="@null"
            android:background="@drawable/round"
            android:text="PLAY"
            android:id="@+id/play"

            ></Button>



  </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center"
        >
       <Button
           android:layout_width="@dimen/_45sdp"
           android:layout_height="@dimen/_45sdp"
           android:layout_margin="@dimen/_10sdp"
           app:backgroundTint="@null"
           android:background="@drawable/ranking"
           android:id="@+id/rank"
           ></Button>
        <Button
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            android:layout_margin="@dimen/_10sdp"
            app:backgroundTint="@null"
            android:background="@drawable/growth"
            android:id="@+id/growth"
            ></Button>
        <Button
            android:layout_width="@dimen/_45sdp"
            android:layout_height="@dimen/_45sdp"
            android:layout_margin="@dimen/_10sdp"
            app:backgroundTint="@null"
            android:background="@drawable/trophy"
            android:id="@+id/trophy"
            ></Button>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/downback"
        android:layout_weight="1"
        ></LinearLayout>

</LinearLayout>